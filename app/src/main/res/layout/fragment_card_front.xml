<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="32dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="#f0f0f0"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="176dp"
            android:layout_height="225dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/ic_farmer" />

        <TextView
            android:layout_marginTop="40dp"
            android:layout_marginLeft="250dp"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employer Name" />

        <TextView
            android:layout_marginTop="75dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking for: Farmer" />

        <TextView
            android:layout_marginTop="105dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Location: Address here" />

        <TextView
            android:layout_marginTop="135dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Compensation: $10/hour" />

        <TextView
            android:layout_marginTop="165dp"
            android:layout_marginLeft="250dp"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="#000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Minimum skill required: here" />

        <ImageView
            android:layout_width="214dp"
            android:layout_height="50dp"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="250dp"
            android:background="@drawable/ic_bulbs" />

    </android.support.v7.widget.CardView>

</LinearLayout>