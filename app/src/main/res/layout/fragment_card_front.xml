<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:layout_marginTop="32dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="3dp"
        android:background="#f0f0f0"
        card_view:cardElevation="2dp"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/employerProfile"
                android:layout_width="176dp"
                android:layout_height="225dp"
                android:layout_margin="10dp" />

            <LinearLayout
                android:layout_marginLeft="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_marginTop="16dp"
                    android:id="@+id/employerName"
                    android:layout_alignEnd="@id/employerProfile"
                    android:layout_alignRight="@id/employerProfile"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Employer Name" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_below="@id/employerName"
                    android:id="@+id/type"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Looking for: Farmer" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/location"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Location: Address here" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:id="@+id/price"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compensation: $10/hour" />

                <TextView
                    android:layout_marginTop="5dp"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Minimum skill required: here" />

                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:background="@drawable/ic_lightbulb_fullcolor" />

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:background="@drawable/ic_lightbulb_fullcolor" />

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:background="@drawable/ic_lightbulb_fullcolor" />

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:background="@drawable/ic_lightbulb_fullcolor" />

                    <ImageView
                        android:layout_width="75px"
                        android:layout_height="75px"
                        android:background="@drawable/ic_lightbulb_halfcolor" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="737px"
                android:layout_height="508px"
                android:background="@drawable/job_map"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>